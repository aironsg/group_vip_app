    <style name="title_app_style">
        <item name="android:text">@string/title_app</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_style">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="editText_style">
        <item name="android:textColorHint">@color/blue</item>
        <item name="android:layout_height">48dp</item>

    </style>

    <style name="shapeAppearanceMediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">16dp</item>
