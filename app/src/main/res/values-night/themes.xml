<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GroupsVipApp" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your dark theme here. -->
         <item name="colorPrimary">@color/app_bar_color</item>
    </style>

    <style name="title_app_style">
        <item name="android:text">@string/title_app</item>
        <item name="android:textColor">@color/app_bar_color</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>

    </style>



    <style name="button_style">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="editText_style">
        <item name="android:textColorHint">#EBF48F</item>
        <item name="android:layout_height">48dp</item>
    </style>
</resources>